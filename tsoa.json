{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3,
    "name": "BCC Canteen API",
    "version": "1.0.0",
    "spec": {
      "servers": [{ "url": "http://localhost:3000", "description": "Local" }]
    }
  },
  "routes": {
    "routesDir": "build"
  }
}
